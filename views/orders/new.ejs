<h2>Nuevo Pedido para <%= client.name %></h2>

<a href="/orders/<%= client._id %>" class="btn btn-secondary mb-3">Volver a Pedidos</a>

<form action="/orders/<%= client._id %>" method="POST" class="mt-3">
  <div id="products">
    <div class="row mb-2">
      <div class="col">
        <input type="text" class="form-control" name="nombre" placeholder="Producto" required>
      </div>
      <div class="col">
        <input type="number" class="form-control" name="cantidad" placeholder="Cantidad" required>
      </div>
      <div class="col">
        <input type="number" class="form-control" name="precio" placeholder="Precio" required>
      </div>
    </div>
  </div>

  <button type="button" class="btn btn-sm btn-outline-primary" id="addProduct">Agregar otro producto</button>
  <button type="submit" class="btn btn-success mt-3">Crear Pedido</button>
</form>

<script>
document.getElementById("addProduct").addEventListener("click", () => {
  const div = document.createElement("div");
  div.classList.add("row", "mb-2");
  div.innerHTML = `
    <div class="col"><input type="text" class="form-control" name="nombre" placeholder="Producto" required></div>
    <div class="col"><input type="number" class="form-control" name="cantidad" placeholder="Cantidad" required></div>
    <div class="col"><input type="number" class="form-control" name="precio" placeholder="Precio" required></div>
  `;
  document.getElementById("products").appendChild(div);
});
</script>
