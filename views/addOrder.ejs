<h2>Nuevo Pedido</h2>
<form action="/orders" method="POST">
  <% if (user.role === "admin") { %>
    <div class="mb-3">
      <label>Seleccionar cliente</label>
      <select name="clientId" class="form-select" required>
        <% clients.forEach(c => { %>
          <option value="<%= c._id %>"><%= c.name %> — <%= c.email %></option>
        <% }) %>
      </select>
    </div>
  <% } %>

  <div class="mb-3">
    <label>Producto</label>
    <select name="productName" class="form-select" required>
      <% products.forEach(p => { %>
        <option value="<%= p.name %>"><%= p.name %> — $<%= p.price %></option>
      <% }) %>
    </select>
  </div>

  <div class="mb-3">
    <label>Cantidad</label>
    <input type="number" name="quantity" class="form-control" min="1" value="1" required>
  </div>

  <button class="btn btn-success">Crear Pedido</button>
</form>
